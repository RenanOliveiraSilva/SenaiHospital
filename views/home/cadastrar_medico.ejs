<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/stylesheets/output.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Asap&display=swap" rel="stylesheet">
    <title>Cadastro de Usuário - PediCare+</title>
    <style>
        body {
            font-family: 'Asap', sans-serif;
        }
    </style>
</head>

<body class="bg-gray-100">
    <!-- Header -->
    <header class="bg-[#D0C7B6] h-20 shadow-lg flex items-center p-4">
        <img src="/images/logo-branco.png" alt="logo" class="h-12">
    </header>

    <!-- Container -->
    <div class="container mx-auto my-10 max-w-4xl p-6 bg-white rounded-lg shadow-lg">
        <h2 class="text-2xl font-bold text-[#2C5545] text-center mb-8">Cadastro de Usuário - PediCare+</h2>

        <!-- Formulário de Cadastro -->
        <form action="/cadastrar" method="POST" class="space-y-6">
            <!-- Nome Completo -->
            <div class="form-group">
                <label for="fullName" class="block text-sm font-medium text-[#2C5545] mb-2">Nome Completo:</label>
                <input type="text" id="fullName" name="nome" placeholder="Digite o nome completo"
                    class="w-full p-3 border-2 border-gray-300 rounded-lg focus:border-[#2C5545] focus:ring focus:ring-[#2C5545] focus:ring-opacity-50 transition duration-200" required>
            </div>

            <!-- CPF, Email, Senha -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="form-group">
                    <label for="cpf" class="block text-sm font-medium text-[#2C5545] mb-2">CPF:</label>
                    <input type="text" id="cpf" name="cpf" placeholder="Digite o CPF"
                        class="w-full p-3 border-2 border-gray-300 rounded-lg focus:border-[#2C5545] focus:ring focus:ring-[#2C5545] focus:ring-opacity-50 transition duration-200" required>
                </div>
                <div class="form-group">
                    <label for="email" class="block text-sm font-medium text-[#2C5545] mb-2">E-mail:</label>
                    <input type="email" id="email" name="email" placeholder="Digite o e-mail"
                        class="w-full p-3 border-2 border-gray-300 rounded-lg focus:border-[#2C5545] focus:ring focus:ring-[#2C5545] focus:ring-opacity-50 transition duration-200" required>
                </div>
                <div class="form-group col-span-full">
                    <label for="senha" class="block text-sm font-medium text-[#2C5545] mb-2">Senha:</label>
                    <input type="password" id="senha" name="senha" placeholder="Digite a senha"
                        class="w-full p-3 border-2 border-gray-300 rounded-lg focus:border-[#2C5545] focus:ring focus:ring-[#2C5545] focus:ring-opacity-50 transition duration-200" required>
                </div>
            </div>

            <!-- Data de Nascimento, Contato -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="form-group">
                    <label for="birthDate" class="block text-sm font-medium text-[#2C5545] mb-2">Data de Nascimento:</label>
                    <input type="date" id="birthDate" name="data_nasc"
                        class="w-full p-3 border-2 border-gray-300 rounded-lg focus:border-[#2C5545] focus:ring focus:ring-[#2C5545] focus:ring-opacity-50 transition duration-200" required>
                </div>
                <div class="form-group">
                    <label for="contact" class="block text-sm font-medium text-[#2C5545] mb-2">Contato:</label>
                    <input type="text" id="contact" name="contato" placeholder="Digite o telefone para contato"
                        class="w-full p-3 border-2 border-gray-300 rounded-lg focus:border-[#2C5545] focus:ring focus:ring-[#2C5545] focus:ring-opacity-50 transition duration-200" required>
                </div>
            </div>

            <!-- Endereço, Número, Bairro, Cidade -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="form-group">
                    <label for="address" class="block text-sm font-medium text-[#2C5545] mb-2">Endereço:</label>
                    <input type="text" id="address" name="rua" placeholder="Digite o endereço"
                        class="w-full p-3 border-2 border-gray-300 rounded-lg focus:border-[#2C5545] focus:ring focus:ring-[#2C5545] focus:ring-opacity-50 transition duration-200" required>
                </div>
                <div class="form-group">
                    <label for="number" class="block text-sm font-medium text-[#2C5545] mb-2">Número:</label>
                    <input type="text" id="number" name="numero_casa" placeholder="Número"
                        class="w-full p-3 border-2 border-gray-300 rounded-lg focus:border-[#2C5545] focus:ring focus:ring-[#2C5545] focus:ring-opacity-50 transition duration-200" required>
                </div>
                <div class="form-group">
                    <label for="neighborhood" class="block text-sm font-medium text-[#2C5545] mb-2">Bairro:</label>
                    <input type="text" id="neighborhood" name="bairro" placeholder="Digite o bairro"
                        class="w-full p-3 border-2 border-gray-300 rounded-lg focus:border-[#2C5545] focus:ring focus:ring-[#2C5545] focus:ring-opacity-50 transition duration-200" required>
                </div>
                <div class="form-group">
                    <label for="city" class="block text-sm font-medium text-[#2C5545] mb-2">Cidade:</label>
                    <input type="text" id="city" name="cidade" placeholder="Digite a cidade"
                        class="w-full p-3 border-2 border-gray-300 rounded-lg focus:border-[#2C5545] focus:ring focus:ring-[#2C5545] focus:ring-opacity-50 transition duration-200" required>
                </div>
            </div>

            <!-- Botão de Cadastro -->
            <div class="flex justify-center items-center mt-8">
                <button type="submit"
                    class="w-full md:w-1/3 p-4 text-white font-bold rounded-lg bg-[#2C5545] hover:bg-[#234536] transition-all duration-300 shadow-md hover:shadow-lg">
                    CADASTRAR
                </button>
            </div>
        </form>
    </div>
</body>

</html>
